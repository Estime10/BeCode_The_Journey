<!-- hotdrop subtitle -->
<div class="hotdrop" >
<h2 class="drop" style="margin-left: 30px;">THE <span class="nom" style="color: red; margin-top: -170px;">HOT</span> DROP</h2>
</div>
</div>

<div class="hotdropGallery">
  
<div class="container">

<!-- slide one -->
<% if (typeof slide1 !=='undefined' && slide1) { %>
<div class="slide" id="slide1" style="background-image: url('/uploads/<%= slide1 %>');">
<% } else { %>
<div class="gallery-item hidden">
<% } %>
</div>
<!-- slide two -->
<% if (typeof slide2 !=='undefined' && slide2) { %>
<div class="slide" id="slide1" style="background-image: url('/uploads/<%= slide2 %>');">
<% } else { %>
<div class="gallery-item hidden">
<% } %>
</div>
<!-- slide three -->
<% if (typeof slide3 !=='undefined' && slide3) { %>
<div class="slide" id="slide1" style="background-image: url('/uploads/<%= slide3 %>');">
<% } else { %>
  <div class="gallery-item hidden">
<% } %>
</div>

<!-- slide four -->
<% if (typeof slide4 !=='undefined' && slide4) { %>
<div class="slide" id="slide1" style="background-image: url('/uploads/<%= slide4 %>');">
<% } else { %>
  <div class="gallery-item hidden">
<% } %>
</div>
</div>
</div>

<!-- feed one  -->
<div class="feed" style="margin-left: 150px;">
  <div class="pictureFeed" style=" margin-right: 40px;">
      <div class="galleryBox">
        <div class="yellow">

          <% if (images && images.length > 0) { %>
            <% for (let i = 0; i < images.length; i++) { %>
              <div class="gallery-item">
                <img class="gallery-image" src="/uploads/<%= images[i] %>">
              </div>
              <% counter++; %>
            <% } %>
          <% } else { %>
            <div class="gallery-image hidden">
            </div>
          <% } %>
          
        </div>
      </div>
  </div>
</div>
</top>
</body>
</html>
<script>
  // Initialize the slider
  function sliderPluggin(activeslide = 0) {
    const slides = document.querySelectorAll('.slide');
    slides[activeslide].classList.add('active');
    function clearActiveClasses() {
      slides.forEach((slide) => {
        slide.classList.remove('active');
      });
    }
    for (const slide of slides) {
      slide.addEventListener('click', () => {
        clearActiveClasses();
        slide.classList.add('active');
      });
    }
  }
  sliderPluggin(0);

  // Initialize the counter for follower
  // button follow
  const followBtn = document.querySelector(".following")
  // count followers
  const count = document.querySelector("#following-count")
  // button clicked
  let clicked = false;
  followBtn.addEventListener("click", () => {
    if (!clicked) {
      clicked = true;
      count.textContent++;
    } else {
      clicked = false;
      count.textContent--;
    }
  });

  // Initialize the counter for post
  // Get the element by its ID
  const postCount = document.getElementById("post-count");
  // Update the text content with the counter value
  postCount.textContent = '<%= counter %>';

</script>
