<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <title>Sneakers Dashboard</title>
</head>

<body>
<top style="margin-top: 20px;">
<!-- title -->
  <a href="http://localhost:3000/logout" style="float: right; color: red;margin-top: 10px; text-decoration: none; text-transform: uppercase;">Logout</a>

<div class="title">

<h1 class="proname"><span class="nom" style="color: red;">
  <%= name %>
</span> Sneaker profile</h1>
</div>
<!-- profile -->
<div class="profile">

<!-- link to profile upload -->
<a href="http://localhost:3000/avatar/<%= name %>">
<!-- profile picture -->
<% if (typeof avatar !=='undefined' && avatar) { %>
<img src="/uploads/<%= avatar %>" alt="Avatar" width="200px" height="200px" style="
         border-radius: 50%;margin-top: 0px;margin-bottom: 0px;overflow: hidden;" />
<% } else { %>
<img src="/images/Image.jpg" alt="Avatar" style="border-radius: 50%;margin-top: 40px;margin-bottom: 0px;overflow: hidden;" width="200px" height="200px" />
<% } %>
</a>
<div class="adds" style="display: flex; align-items: stretch; flex-direction: column;">
  <div class="followers">
    <% let counter = 0; %>
    <p class="posts">posts
      <span class="number" style="color: red;" id="post-count"><%= images.length %></span>
    </p>
    <p class="follow">followers
      <span class="number" style="color: red;" id="following-count">0</span>
    </p>
    <p class="followed">followed
      <span class="number" style="color: red;">0</span>
    </p>
  </div>
  <div class="btn-activities">
    <button class="dm"><a style="color: whitesmoke;text-decoration: none;" href="http://localhost:3000/message/">message</a></button>
    <button class="following">follow</button>
    <button class="btn-activities"><a style="color: whitesmoke;text-decoration: none;" href="http://localhost:3000/slides/<%= name %>"> post img</a></button>
  </div>
</div>
</div>
<!-- hotdrop section -->
<div class="hotdropTitle">
<!-- hotdrop subtitle -->
<div class="hotdrop" >
<h2 class="drop" style="margin-left: 30px;">THE <span class="nom" style="color: red; margin-top: -170px;">HOT</span> DROP</h2>
</div>
</div>
<div class="bar">
  <div class="red">
    <hr style="margin-top: 5px;">
  </div>
</div>

<div class="hotdropGallery">
  
<div class="container">

<% if (slides && slides.length > 0) { %>
  <% for (let i = 0; i < slides.length; i++) { %>
    <div class="slide" id="slide<%= i+1 %>" style="background-image: url('/uploads/<%= slides[i].url %>');">
    </div>
  <% } %>
<% } else { %>
  <div class="gallery-item hidden"></div>
<% } %>

</div>
<div class="bar">
  <div class="red">
    <hr style="margin-top: 50px;">
  </div>
</div>
<h2 class="collection"><span class="nom" style="color: red;">
  <%= name %>
</span> collection showcase</h2>
<!-- feed one  -->
<div class="feed" style="margin-left: 150px;">
  <div class="pictureFeed" style=" margin-right: 40px;">
    <div class="galleryBox">
      <div class="yellow">
        <% if (images && images.length > 0) { %>
          <% for (let i = 0; i < images.length; i++) { %>
            <div class="gallery-item">
              <div class="image-container">
                <img class="gallery-image" src="/uploads/<%= images[i].url %>" alt="Image <%= i+1 %>">
                <br>
                <h3 class="image-title">
                  <% const words = images[i].shoe_name.trim().split(' '); %>
                  <% const firstWord = words.shift(); %>
                  <% const restOfWords = words.join(' '); %>
                  <span class="first-word"><%= firstWord %></span>
                  <br>
                  <span class="rest-of-words"><%= restOfWords %></span>
                </h3>                
              </div>
            </div>
            <% counter++; %>
          <% } %>
        <% } else { %>
          <div class="gallery-image hidden"></div>
        <% } %>
      </div>
    </div>
  </div>
</div>
</div>
</top>
</body>
</html>
<script>
  // Initialize the slider
  function sliderPluggin(activeslide = 0) {
    const slides = document.querySelectorAll('.slide');
    slides[activeslide].classList.add('active');
    function clearActiveClasses() {
      slides.forEach((slide) => {
        slide.classList.remove('active');
      });
    }
    for (const slide of slides) {
      slide.addEventListener('click', () => {
        clearActiveClasses();
        slide.classList.add('active');
      });
    }
  }
  sliderPluggin(0);

  // Initialize the counter for post
  // Get the element by its ID
  const postCount = document.getElementById("post-count");
  // Initialize the counter with the current post count
  let counter = parseInt(postCount.textContent);
  
  // Get the follow button element
  const followBtn = document.querySelector(".following");
  // Get the followers count element
  const count = document.querySelector("#following-count");
  // Initialize the clicked state to false
  let clicked = false;
  
  // Add event listener for the follow button
  followBtn.addEventListener("click", () => {
    // If the button is clicked for the first time
    if (!clicked) {
      clicked = true;
      count.textContent++; // Increment the followers count
    } else {
      // If the button is clicked again
      clicked = false;
      count.textContent--; // Decrement the followers count
    }
  });
</script>
