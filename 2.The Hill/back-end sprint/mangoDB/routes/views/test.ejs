<!DOCTYPE html>
<body>
<section class="modale hide">
    <div class="flexe">
        <h3 class="proname"><span class="nom" style="color: red;"></span> profile picture </h3>
        <button class="bruton-close">X</button>
    </div>
        <form action="/dashbord/" method="POST" enctype="multipart/form-data" style="text-align: center; margin-top: 20px;">
          <!-- avatar -->
        <div>
          <label for="slides"><h4 style="color: red;">Select hot drop picture</h4></label>
          <br>
          <br>
          <input type="file" id="avatar" name="avatar"
          onchange="document.getElementById('slide1').src = window.URL.createObjectURL(this.files[0])"
          accept=".jpg, .jpeg, .png" />
            <button type="submit" name="submit" value="Add Image">update profile</button>
            <br>
            <br>
            <hr>
            <div class="preview">
                <img id="slide1" src="/images/Image-bgoff.png" style="height: 250px; width: 250px;"/>
            </div>
                
        </div>
</form>
</section>
<div class="overlay hide"></div>
<button class="bruton bruton-open">hot drop</button>

</body>
<script>
const modal = document.querySelector(".modale");
const overlay = document.querySelector(".overlay");
const openModalbruton = document.querySelector(".bruton-open");
const closeModalbruton = document.querySelector(".bruton-close");

// close modal function
const closeModal = function () {
  modal.classList.add("hide");
  overlay.classList.add("hide");
};

// close the modal when the close button and overlay is clicked
closeModalbruton.addEventListener("click", closeModal);
overlay.addEventListener("click", closeModal);

// close modal when the Esc key is pressed
document.addEventListener("keydown", function (e) {
  if (e.key === "Escape" && !modal.classList.contains("hide")) {
    closeModal();
  }
});

// open modal function
const openModal = function () {
  modal.classList.remove("hide");
  overlay.classList.remove("hide");
};
// open modal event
openModalbruton.addEventListener("click", openModal);
</script>
</html>
